<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="@color/background_color">


    <LinearLayout
        android:id="@+id/linearFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/sodour_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/new_check"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"

            />

        <Button
            android:id="@+id/view_checkbook_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/view_checkBook_state"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"
            />
        <Button
            android:id="@+id/view_received_checks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/view_recieved_check"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"

            />
        <Button
            android:id="@+id/reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/reminder"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"

            />

        <Button
            android:id="@+id/view_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/view_request"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"

            />
        <Button
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/setting"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/exit"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/guid"
            android:background="@color/white_greyish"
            android:textColor="@color/background_color"/>
    </LinearLayout>




</RelativeLayout>